    <!-- Boxes -->
    <sextion class="p-5">
        <div class="container">
            <div class="row justify-content-center  g-4">

                <div class="card  text-dark shadow-sm ">
                    <%if(errors.length>0){%>
                        <%mode=0%>
                        <%errors.forEach((error)=>{%>
                            
                            <h6 class="card-title mt-3">
                                <%=error%>
                            </h6>
                            <p class="card-text mt-3 mb-3">
                                <span class="bi bi-pencil-square"><a
                                        href="https://silvestreoliver961.kpages.online/umbundu">
                                        Acesse as nossas aulas</a>
                                </span>
                            </p>
                        <%})%>
                    <%}else{%>
                        <%if(result["0"]){%>
                            <%const word=result["0"]%>
                            <%if(word.language==="pt" ){%>
                                <div class="card-body ">
                                    <div class="h4 mb-3 text-center text-capitalize">
                                        <%=word.portuguese%>
                                    </div>
                                    <h6 class="card-title text-capitalize">
                                        <%if(word.umbundu.length> 1){%>
                                            <%word.umbundu.forEach((ub)=>{%>
                                                <%if(word.umbundu[word.umbundu.length -1] !==ub){%>
                                                    <%=ub+", "%>
                                                   
                                                <%}else{%>
                                                    <%=ub+"."%>
                                                <%}%>
                                            <%})%>
                                        <%}else{%>
                                            <%=word.umbundu%>
                                        <%}%>
                                    </h6>
                                    <p class="card-text mt-3">
                                        <span class="bi bi-pencil-square"><a
                                                href="https://silvestreoliver961.kpages.online/umbundu">
                                                Acesse as nossas aulas</a>
                                        </span>
                                    </p>
                                </div>
                                <%mode=0%>
                            <%}%>
                            <%if(word.language==="ub" ){%>
                                <div class="card-body ">
                                    <div class="h4 mb-3 text-center text-capitalize">
                                        <%=word.terms%>
                                    </div>
                                    <h6 class="card-title text-capitalize">
                                        <%=word.portuguese%>
                                    </h6>
                                    <p class="card-text mt-3">
                                        <span class="bi bi-pencil-square"><a
                                            href="https://silvestreoliver961.kpages.online/umbundu">
                                            Acesse as nossas aulas</a>
                                        </span>
                                    </p>
                                </div>
                                <%mode=0%>
                            <%}%>
                        <%}%> 
                    <%}%>
                    <%if (mode!==0 ){%>
                        <div class="card-body" >
                            <div class="h4 mb-3 text-center text-capitalize">
                                Aprender <%=mode%>
                            </div>
                            <h6 class="card-title text-capitalize">
                                Oku lilongisa
                            </h6>
                            <p class="card-text mt-3">
                                <span class="bi bi-pencil-square"><a
                                    href="https://silvestreoliver961.kpages.online/umbundu">
                                    Acesse as nossas aulas</a>
                                </span>
                            </p>
                        </div>
                    <%}%>
                    
                </div>




            </div>
        </div>
    </sextion>

